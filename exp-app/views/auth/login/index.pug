extends ../layout.pug
include ../../mixins/icon_button

block form
    form(id="login-form")
        h1(class="text-2xl font-hubot text-center") Login to your Account
        div(class="mt-4 flex flex-col")
            label(for="email" class="flex-1 text-xs text-gray-400 uppercase") Email
            input(class="rounded text-base border-2 border-blue-50 p-2 flex-1" type="email" name="email" id="email"
                placeholder="Enter your email address")
        div(class="mt-4 flex flex-col")
            label(for="password" class="flex-1 text-xs text-gray-400 uppercase") Password
            input(class="rounded text-base border-2 border-blue-50 p-2 flex-1" type="password" name="password" id="password" placeholder="Your password")
        .mt-4.flex 
            +icon_button("login-button", "login", "Login")
        div(class="mt-4 flex flex-col text-sm gap-2 text-gray-500")
            a(class="w-fit hover:underline mx-auto" href="/signup") Don't have an account? Signup
            a(class="w-fit hover:underline mx-auto" href="/forgot-password") Forgot password?






