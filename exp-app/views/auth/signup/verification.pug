extends ../layout.pug
include ../../mixins/icon_button
include ../../mixins/text_group
include ../../mixins/h_1
include ../../mixins/csrf_hidden
include ../../mixins/alert

block page-scripts 
    script(src="/js/validator.js")
    script(src="/js/alert.js")
    script(src="/js/verification.js")

block form
    form(id="verification-form")
        +h_1("Verify your Email address")
        +alert_info("See your email", "We have sent you an email with a verification code")
        input(type="hidden" name="email" value=email)
        input(type="hidden" name="userId" value=userId)
        +text_group("number", "code", "Verification Code", "Six digit numerical code")
        +csrf_hidden(csrfToken)
        .mt-4.flex 
            +icon_button("submit-button", "check_circle", "Submit")
        div(class="mt-4 flex flex-col text-sm gap-2 text-gray-500")
            a(class="w-fit hover:underline mx-auto" href="/login") Already have an account? Login

